{# templates/task/create.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Task</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
        }

        .task-form {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create a Task</h1>

<div class="task-form">
    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
            {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.dueDate, {'attr': {'class': 'form-control', 'placeholder': 'Due Date'}}) }}
        </div>

        {# Check if 'completed' form field is defined before accessing its value #}
        {% if form.completed is defined %}
            <div class="form-group">
                {{ form_label(form.completed, 'Completed', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_row(form.completed, {'attr': {'class': 'form-check-input'}}) }}
            </div>
        {% endif %}

        {# Check if 'priority' form field is defined before accessing its value #}
        {% if form.priority is defined %}
            <div class="form-group">
                {{ form_row(form.priority, {'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        <button type="submit" class="btn btn-primary">Create Task</button>
    {{ form_end(form) }}
</div>
    </div>
</body>
</html>

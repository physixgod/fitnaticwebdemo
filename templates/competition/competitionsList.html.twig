    </div>
    {{ form_widget(emailForm.save, {'label': 'Send', 'attr': {'class': 'btn btn-primary', 'style': 'margin-top: 10px;'}}) }}
    <input type="hidden" name="competition_name" id="competitionNameInput" value="">    
    {{ form_end(emailForm) }}
</div>




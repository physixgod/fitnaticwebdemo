<section class="section" id="schedule">
    <div class="container"> 
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading dark-bg">
                <h2><em>My Points</em> : 50 </h2>
                <a href={{ path('quiz_app')}} class="take-quiz-button">Take a quiz</a>
                    <h2>Competitions</h2>
                    <img src="assets/images/slide-01.jpg" alt="">
                    <p>Here you can find all the currently open competitions</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {# Remove the filters for simplicity, you can add them based on your needs #}
                <div class="schedule-table filtering">
                    <table>
                        <thead>
                            <tr>
                                 <th style="color: white;">Competition Name</th>
                                <th style="color: white;">Start Date</th>
                                <th style="color: white;">End Date</th>
                                <th style="color: white;">Location</th>
                                  <th style="color: white;">Sport Type</th> 
                                 <th style="color: white;">Actions</th>
                                   
                                <!-- Add more headers based on your needs -->
                            </tr>
                        </thead>
                        <tbody>
                            {% for competition in competitions %}
                                <tr>
                                    <td>{{ competition.name }}</td>
                                    <td>{{ competition.startDate|date('Y-m-d ') }}</td>
                                    <td>{{ competition.endDate|date('Y-m-d ') }}</td>
                                    <td>{{ competition.location }}</td>
                                    <td>{{competition.sportType}}
                                    <td class="action-buttons">
        <a href={{ path('competitions_details', { id: competition.id }) }}>Read More</a>
      <a href="#" onclick="showForm('{{ competition.name }}')">Participate</a>
        <a href={{ path('competition_evaluation')}} >Evaluate</a>
 </td>
 
                                    <!-- Add more cells based on your needs -->
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {% for flash_message in app.session.flashbag.get('success') %}
    <div class="alert alert-success"role="alert" style="margin-top: 30px; width: 600px; margin-left: auto; margin-right: auto;">
        {{ flash_message }}
    </div>
{% endfor %}
                   
<div id="emailForm" style="display: none; text-align: center; margin-top: 20px;">
